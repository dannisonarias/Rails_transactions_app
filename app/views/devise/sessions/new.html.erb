<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <div class="field">
    <%= f.label :email, :class=>"hidden"%><br />
    <%= f.email_field :email, autofocus: true, :placeholder=>"  Email", autocomplete: "email", :class=>"text_input" %>
  </div>
  
  <div class="field">
    <%= f.label :password, :class=>"hidden" %><br />
    <%= f.password_field :password,:placeholder=>"  Password", autocomplete: "current-password", :class=>"text_input" %>
  </div>
    
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me,:id=>"remember-me"%>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Log in", :class=>"btn button-login sign-up-btn"%>
  </div>
<% end %>
<%= render "devise/shared/links" %>
